<div class="panel">
  <div class="panel-heading">
    <h2>Sign Up</h2>
  </div>
  <div class="panel-body">
    <%= form_for(:user, url:'users/register') do |f| %>
        <% if @user.errors.any? %>
            <div class="alert alert-danger">
              <button class="glyphicon glyphicon-alert" role="button" data-dismiss="alert"
                      aria-expanded="false">&times;</button>
              <h3 class="h3">
                <%= pluralize(@user.errors.count, "errors")%>
                &nbsp; has prevented your registration.
              </h3>
              <ul>
                <%= @user.errors.messages do |message| %>
                    <li>
                      <%= message %>
                    </li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div class="form-group-md-5">
          <%= f.label :'Email' %>
          <%= f.text_field :email, {'class'=>'form-control'} %>
        </div>
        <div class="form-group-md-5">
          <%= f.label :'Password' %>
          <%= f.text_field :password, {'class'=>'form-control'} %>
        </div>
        <div class="form-group-md-5">
          <%= f.label :'Confirm Password' %>
          <%= f.text_field :confirm_password, {'class'=>'form-control'} %>
        </div>
        <div class="form-group-md-5">
          <%= f.label :'Email' %>
          <%= f.text_field :email, {'class'=>'form-control'} %>
        </div>
        <span class="dl-horizontal"></span>
        <div class="form-group-md-5">
          <%= f.submit :register,{'class'=>'btn btn-lg btn-primary'} %>
        </div>
    <% end %>
  </div>
</div>